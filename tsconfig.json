{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "jsx": "react-native",
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "types",
    "screens",
    "assets",
    "lib",
    "hooks",
    "App.js",
    "index.js",
    "env.d.ts",
    "types/declarations.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
